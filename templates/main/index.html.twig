{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<div class="count">{{ articles.getTotalItemCount }}</div>
	<table>
		<tr>
			<th>{{ knp_pagination_sortable(articles, 'Id', 'a.id') }}</th>
            <th>{{ knp_pagination_sortable(articles, 'title', 'a.name') }}</th>
		</tr>
	</table>

	<ul>
		{% for item in articles %}
			<li>{{ item.name }}</li>

		{% endfor %}
	</ul>
	<div class="navigation">{{ knp_pagination_render(articles) }}</div>
{% endblock %}
